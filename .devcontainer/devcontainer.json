{
  "name": "${localWorkspaceFolderBasename}",
  "service": "devcontainer",
  "workspaceFolder": "/workspace",
  "dockerComposeFile": ["../compose.yml"],
  "forwardPorts": [8080],
  "remoteUser": "vscode",
  "remoteEnv": {
    "USE_DEV_CONTAINER": "true",
    "PIP_DEFAULT_TIMEOUT": "100", // デフォルト(15秒)だとタイムアウトする場合があるので設定
    "UV_HTTP_TIMEOUT": "100",
    "UV_SYSTEM_PYTHON": "false"
  },
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "username": "vscode",
      "userUid": "automatic",
      "userGid": "automatic",
      "upgradePackages": "true"
    },
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest",
      "ppa": "false"
    }
  },
  "postCreateCommand": "sh .devcontainer/scripts/post_create.sh",
  "postStartCommand": "sh .devcontainer/scripts/post_start.sh ${containerWorkspaceFolder}",
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
        "python.terminal.activateEnvironment": true,
        "python.envFile": "${workspaceFolder}/.venv",
        "python.autoComplete.extraPaths": [
          "${workspaceFolder}/.venv/lib/python3.12/site-packages"
        ],
        // "python.testing.pytestPath": "/usr/local/py-utils/bin/pytest",
        "ruff.interpreter": ["${workspaceFolder}/bin/python"]
      },
      "extensions": [
        // python関連
        "ms-python.python",
        "charliermarsh.ruff",
        "ms-python.mypy-type-checker",
        "littlefoxteam.vscode-python-test-adapter",
        "njpwerner.autodocstring",
        "KevinRose.vsc-python-indent",
        // json, yaml, toml formatter
        "esbenp.prettier-vscode",
        "redhat.vscode-yaml",
        "tamasfe.even-better-toml",
        // Git関連
        "GitHub.vscode-pull-request-github",
        "github.vscode-github-actions",
        "mhutchie.git-graph",
        "eamodio.gitlens",
        "github.vscode-github-actions",
        // markdown
        "yzhang.markdown-all-in-one",
        "DavidAnson.vscode-markdownlint",
        "bierner.github-markdown-preview",
        // その他
        "streetsidesoftware.code-spell-checker",
        "naumovs.color-highlight",
        "Gruntfuggly.todo-tree",
        "oderwat.indent-rainbow",
        "ms-vscode.live-server",
        "shardulm94.trailing-spaces",
        "usernamehw.errorlens",
        "ryanluker.vscode-coverage-gutters"
      ]
    }
  }
}
