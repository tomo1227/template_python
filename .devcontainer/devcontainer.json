{
    "name": "python-template",
    "dockerComposeFile": [
        "../docker-compose.yml",
        "docker-compose.yml"
    ],
    "service": "devcontainer",
    "workspaceFolder": "/workspace",
    "features": {
        "ghcr.io/devcontainers/features/python:1": {
            "version": "latest"
        }
    },
    "postCreateCommand": "sh .devcontainer/scripts/post_create.sh",
    "postStartCommand": "sh .devcontainer/scripts/post_start.sh ${containerWorkspaceFolder}",
    "customizations": {
        "vscode": {
            "settings": {
                "editor.guides.bracketPairs": true,
                "editor.formatOnSave": true,
                "[python]": {
                    "editor.formatOnSave": true,
                    "editor.defaultFormatter": "ms-python.black-formatter",
                    "editor.formatOnPaste": true,
                    "editor.formatOnType": true,
                    "editor.tabSize": 4,
                    "editor.insertSpaces": true
                },
                "black-formatter.args": [
                    "--line-length=120"
                ],
                "python.sortImports.path": "/usr/local/bin/isort",
                "editor.codeActionsOnSave": {
                    "source.organizeImports": true
                },
                "python.linting.enabled": true,
                "python.linting.lintOnSave": true,
                "python.linting.pylintEnabled": false,
                "python.linting.flake8Enabled": true,
                "python.formatting.provider": "black",
                "flake8.args": [
                    "--max-line-length=120",
                    "--ignore=E203,W503,W504"
                ],
                "python.linting.mypyEnabled": true,
                "python.linting.mypyArgs": [
                    "--disallow-untyped-defs"
                ],
                // "mypy-type-checker.path": [
                //     "${workspaceFolder}/src/.venv/bin/mypy"
                // ],
                "mypy-type-checker.importStrategy": "fromEnvironment"
            },
            "extensions": [
                // python関連
                "ms-python.black-formatter",
                "ms-python.flake8",
                "ms-python.isort",
                "ms-python.python",
                "ms-python.mypy-type-checker",
                "njpwerner.autodocstring",
                // Git関連
                "GitHub.vscode-pull-request-github",
                "github.vscode-github-actions",
                "mhutchie.git-graph",
                "eamodio.gitlens",
                "donjayamanne.githis",
                "github.vscode-github-actions",
                // その他
                "streetsidesoftware.code-spell-checker",
                "tamasfe.even-better-toml",
                "Gruntfuggly.todo-tree",
                "seatonjiang.gitmoji-vscode",
                "oderwat.indent-rainbow",
                "pkief.material-icon-theme"
            ]
        }
    }
}